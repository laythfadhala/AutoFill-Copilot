{
  "manifest_version": 3,
  "name": "Test Extension",
  "version": "0.1.0",
  "description": "Simple test extension with a popup and background script.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Test Extension"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

