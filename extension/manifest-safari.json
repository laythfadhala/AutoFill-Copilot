{
    "manifest_version": 2,
    "name": "AutoFill Copilot",
    "version": "1.0.2",
    "description": "Intelligent form auto-fill extension powered by AI. Securely detects and fills forms on any website.",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "AutoFill Copilot",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png",
            "128": "icons/icon-128.png"
        }
    },
    "background": {
        "scripts": [
            "dist/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost/*",
                "https://*/*"
            ],
            "js": [
                "dist/content/sync-auth.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "http://localhost/*",
                "https://*/*"
            ],
            "js": [
                "content/utils.js",
                "dist/content/form-detection.js",
                "dist/content/forms-observer.js",
                "dist/content/field-filling.js",
                "content/animation-utils.js",
                "dist/content/form-filling.js",
                "content/clear-forms.js",
                "dist/content/floating-button.js"
            ],
            "css": [
                "content/styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "contextMenus",
        "http://localhost/*",
        "https://*/*"
    ],
    "content_security_policy": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';",
    "web_accessible_resources": [
        "icons/*",
        "popup.html",
        "popup.css"
    ],
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}